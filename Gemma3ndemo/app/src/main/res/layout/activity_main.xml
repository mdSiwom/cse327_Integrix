<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- EditText for user input (Prompt) -->
    <EditText
        android:id="@+id/promptEditText"
        android:hint="@string/type_your_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Button to select an image from the gallery -->
    <Button
        android:id="@+id/selectImageButton"
        android:text="@string/select_image"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- ImageView to display the selected image -->
    <ImageView
        android:id="@+id/inputImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/burger_image" /> <!-- Example image -->

    <!-- Button to trigger response generation -->
    <Button
        android:id="@+id/runButton"
        android:text="@string/generate"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- TextView to display the generated result -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_marginTop="24dp"
        android:text="@string/result_will_appear_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
